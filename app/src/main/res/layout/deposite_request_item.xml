<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/rectangle_583__1_"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harish Madiwala"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/credit"
                    android:layout_width="70dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Tran ID" />
                <TextView
                    android:id="@+id/rupee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/credit"
                    android:layout_marginStart="18dp"
                    android:text="ORD-80524915"/>
                <TextView
                    android:id="@+id/debit"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/credit"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:text="Cheque no"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected"
                    android:layout_below="@+id/debit"
                    android:padding="10dp"
                    android:textColor="#CB0303"/>
                <TextView
                    android:id="@+id/rupee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rupee"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@+id/debit"
                    android:layout_marginStart="18dp"
                    android:text="1234567"/>

            </RelativeLayout>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 14-08-2022 "
                android:layout_gravity="center"
                android:textColor="#50000000"
                android:textStyle="bold"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/01/2023  09:09:09"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>